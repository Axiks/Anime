<p id="notice"><%= notice %></p>

<!-- Topic block -->
<table>
  <h2>Список того що тут обговорюється:</h2>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @writings.each do |writing| %>
      <tr>
        <td><%= link_to writing.name_en, writing %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<p>
  <strong>Назва:</strong>
  <%= @topic.name %>
</p>

<p>
  <strong>Текст:</strong>
  <%= @topic.description %>
</p>

<p>
  <strong>Засновник:</strong>
  <% if User.find(@topic.creator).name %>
    <%= link_to User.find(@topic.creator).name, user_profile_path(User.find(@topic.creator).id) %>
  <% else %>
    <%= link_to User.find(@topic.creator).email, user_profile_path(User.find(@topic.creator).id) %>
  <% end %>
</p>

<%= link_to 'Edit topic', edit_topic_path(@topic) %> |
<%= link_to 'Destroy topic', topic_path(@topic), method: :delete, data: { confirm: 'Are you sure?' } %> 

<!-- Comments block -->
<h2>Comments</h2>
<table>
  <tbody>
    <% @comments.each do |comment| %>
      <tr>
        <td><%= comment.body %></td>
      </tr>
      <tr>
        <td><%= link_to 'Edit', edit_comment_path(comment) %></td>
        <td><%= link_to 'Destroy', comment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
        <tr>
      <td><hr></td>
      </tr>
    <% end %>
  </tbody>
</table>

<h1>New Comment</h1>

<%= render 'comments/form', comment: @comment %>