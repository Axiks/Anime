  </div>
<div class="carousel">

      <div class="card-columns">

        <% @writings.each do |writing| %>

          <div class="card">
            <% if writing.avatar.attached? %>
              <%= image_tag writing.avatar, class:"card-img-top" %>
            <% else %>
              <img src="https://shikimori.org<%= writing.shikimory_img %>" class="card-img-top">
            <% end %>
            <div class="card-body">
              <h5 class="card-title"><%= link_to writing.name_en, writing %></h5>
              <p class="card-text">This is a wider card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.</p>
            </div>
            <div class="card-footer">
              <small class="text-muted"><%= link_to 'Edit', edit_writing_path(writing) %></small>
              <small class="text-muted"><%= link_to 'Destroy', writing, method: :delete, data: { confirm: 'Are you sure?' } %></small>
            </div>
          </div>

        <% end %>

    </div>
 
  </div>

