<p id="notice"><%= notice %></p>
<% if user_signed_in? %>
    <%= link_to 'Мій профіль', user_profile_path(current_user.id) %>
  <% end %>

<%= link_to 'Усі топіки', topics_path %>

<h1>Writings</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <h4><%= link_to "Search",  searches_path %></h4>
    <% @writings.each do |writing| %>
      <tr>
        <% if writing.avatar.attached? %>
          <td><%= image_tag writing.avatar %></td>
          <% else %>
           <!-- Вбивця браузерів (Після фікса -> пачті) -->
           <td><img src="https://shikimori.org<%= writing.shikimory_img %>"></td> 
        <% end %>
        <td><%= link_to writing.name_en, writing%></td>
        <td><%= link_to 'Edit', edit_writing_path(writing) %></td>
        <td><%= link_to 'Destroy', writing, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Writing', new_writing_path %>
